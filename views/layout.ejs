      </div>





      <div class="content hidden" id="nav-all">
        <div class="title">
          ALLL
        </div>
        <div class="messages" id="wrap-chat-all-content">
          <ul>
          </ul>
        </div>
        <div class="wrap-send-message">
          <div class="form-group">
            <input type="text" id="chat-all-message" class="form-control">
            <button class="btn" id="chat-all-btn">Gửi</button>
          </div>
        </div>
      </div>




      <div class="content hidden" id="nav-room">
        <div class="title">
            CHAT NHÓM <span class="room-name hidden">- Nhóm:<span id="room-name">Mãi yêu. ahihi</span><button class="btn" id="btn-logout-room">Thoát nhóm</button></span>
        </div>
        <div class="wrap-select-room">
          <div class="container">
            <div class="row">
              <div class="col-3">
                <h3>Tạo phòng</h3>
                <label for="create_roomName">Tên phòng: </label>
                <input type="text" id="create_roomName">
                <button class="btn" id="btn-create-room">Tạo phòng</button>

                <h3>Vào phòng</h3>
                <label for="join_roomName">Tên phòng: </label>
                <input type="text" name="" id="join_roomName">
                <button class="btn" id="btn-join-room">Vào phòng</button>

              </div>
              <div class="col-9">
                <h3>Danh sách phòng</h3>
